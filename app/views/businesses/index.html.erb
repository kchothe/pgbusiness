<h1>Listing businesses</h1>

<table>
  <thead>
    <tr>
      <th>Businessname</th>
      <th>Businesstype</th>
      <th>Businessphone</th>
      <th>Citylistingid</th>
      <th>Createdby</th>
      
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @businesses.each do |business| %>
      <tr>
        <td><%= business.BusinessName %></td>
        <td><%= business.BusinessType %></td>
        <td><%= business.BusinessPhone %></td>
        <td><%= business.CityListingId %></td>
        <td><%= business.CreatedBy %></td>
        
        <td><%= link_to 'Show', business %></td>
        <td><%= link_to 'Edit', edit_business_path(business) %></td>
        <td><%= link_to 'Destroy', business, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

